config APP_TO_NETWORK_MAX_PACKET_SIZE
	int "Maxiumum size of data packet sent from the Application core to the Network core"
	default 64
	help
	  Maximum data size of data packet between the Application core and Network core, including CBOR encoding
config NETWORK_TO_APP_MAX_PACKET_SIZE
	int "Maxiumum size of data packet sent from the Network core to the Application core"
	default 64
	help
	  Maximum data size of data packet between the Application core and Network core, including CBOR encoding

config APP_WAIT_FOR_RESPONSE_TIME
	int "Waiting time for a response for command"
	default 1000
	help
	  Maxiumum time which application waits for command response in milliseconds

choice
	prompt "RPMSG device role"
	default RPMSG_REMOTE

config RPMSG_REMOTE
	bool "Remote"

config RPMSG_MASTER
	bool "Master"

endchoice
